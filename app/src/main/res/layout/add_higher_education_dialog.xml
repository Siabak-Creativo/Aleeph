<LinearLayout
    android:id="@+id/ll_input_phd_details"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/input_phd_dicipline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="Discipline*:"
            android:inputType="text"
            android:padding="5dp"
            android:textColorHint="@color/hintText"
            android:textSize="@dimen/text_size_body" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/input_phd_name_school"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="Institution*"
            android:inputType="text"
            android:padding="5dp"
            android:textColorHint="@color/hintText"
            android:textSize="@dimen/text_size_body" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/input_phd_name_university"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="University*"
            android:inputType="text"
            android:padding="5dp"
            android:textColorHint="@color/hintText"
            android:textSize="@dimen/text_size_body" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/input_institution_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="Institution Country*"
            android:inputType="text"
            android:padding="5dp"
            android:textColorHint="@color/hintText"
            android:textSize="@dimen/text_size_body" />
    </android.support.design.widget.TextInputLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/spinner_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_tv" />

        <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_toEndOf="@id/spinner_title"
            android:layout_toRightOf="@id/spinner_title">
        <EditText
            android:id="@+id/performance_scale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="0123456789."
            android:hint="Grade*"
            android:inputType="text"
            android:padding="5dp"
            android:textColorHint="@color/hintText"
            android:textSize="@dimen/text_size_body" />
    </android.support.design.widget.TextInputLayout>





    </RelativeLayout>




    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/input_occupation_mother"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="0123456789."
            android:hint="Grade*"
            android:inputType="text"
            android:padding="5dp"
            android:textColorHint="@color/hintText"
            android:textSize="@dimen/text_size_body" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/input_training_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Start Date*:"
                android:padding="5dp"
                android:textColorHint="@color/hintText"
                android:textSize="@dimen/text_size_body" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/input_training_end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="End Date*:"
                android:padding="5dp"
                android:textColorHint="@color/hintText"
                android:textSize="@dimen/text_size_body" />
        </android.support.design.widget.TextInputLayout>


    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <CheckBox
            android:id="@+id/checkbox_currently_ongoing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Currently ongoing"
            android:textColor="@color/hintText"
            android:textSize="@dimen/text_size_body" />

    </RelativeLayout>



</LinearLayout>